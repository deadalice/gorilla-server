json = {
  session: {
    token: current_endpoint&.reset_token || current_user&.reset_token,
  },
}

unless @pagy.nil?
  json[:page] = @pagy.page
  json[:pages] = @pagy.pages
  json[:from] = @pagy.from
  json[:to] = @pagy.to
end

if @object && @object.errors.any?
  json[:errors] = @object
end

json

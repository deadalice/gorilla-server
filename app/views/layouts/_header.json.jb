json = {}

if new_token = current_anyone&.reset_token
  json[:session] = {
    token: new_token,
  }
end

if @pagy
  json[:page] = @pagy.page
  json[:pages] = @pagy.pages
  json[:from] = @pagy.from
  json[:to] = @pagy.to
end

json[:errors] = object.errors.full_messages if defined?(object) && object.errors.any?

json

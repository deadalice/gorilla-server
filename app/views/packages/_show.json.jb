count = package.endpoints.size

json = {
  id: package.id,
  name: package.name,
  group_name: package.name,
  # trusted: package.trusted,
  size: package.size,
  h_size: number_to_human_size(package.size)

  install_count: count,
  h_install_count: number_to_human(count),
  created_at: package.created_at.to_i,
  updated_at: package.updated_at.to_i
}

if package.icon.present?
  json[:icon] = render 'layouts/file', file: package.icon
end

json

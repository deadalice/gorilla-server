<% content_for :title, "Packages" %>

<p id="notice"><%= notice %></p>

<h1>Packages</h1>

<table>
  <thead>
    <tr>
      <th colspan="4">Own packages</th>
    </tr>
  </thead>

  <tbody>
    <% @packages.select { |package| package.discarded_at.nil? }.map do |package| %>
      <tr>
        <td><%= package.name %></td>
        <td><%= link_to 'Show', package %></td>
        <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Package', new_package_path %>

<table>
  <thead>
    <tr>
      <th colspan="4">Trusted packages</th>
    </tr>
  </thead>

  <tbody>
    <% @trusted_packages.select { |package| package.discarded_at.nil? }.map do |package| %>
      <tr>
        <td><%= package.name %></td>
        <td><%= link_to 'Show', package %></td>
        <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
